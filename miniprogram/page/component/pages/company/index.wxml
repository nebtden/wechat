<view class="page">
    <view class="page__hd">
        <view class="page__title">公司列表</view>
    </view>
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <view wx:for="{{list}}">
                    <navigator  url="/page/component/pages/company/show?id={{item.id}}" class="weui-media-box weui-media-box_appmsg"  open-type="redirect"   hover-class="weui-cell_active">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{item.image}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{item.name}}</view>
                            <view class="weui-media-box__desc">{{item.desc}}</view>
                        </view>
                    </navigator>
                </view>
            </view>
        </view>
    </view>
</view>
